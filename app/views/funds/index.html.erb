<p id="notice"><%= notice %></p>

<h1>Funds</h1>
<h2>Total Funds: <%= @funds.nil? ? '0' : @funds.sum(:amount) %></h2>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funds.each do |fund| %>
      <tr>
        <td><%= fund.amount %></td>
        <td><%= fund.description %></td>
        <td><%= fund.user %></td>
        <td><%= link_to 'Show', fund %></td>
        <td><%= link_to 'Edit', edit_fund_path(fund) %></td>
        <td><%= link_to 'Destroy', fund, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fund', new_fund_path %>
